{
  "name": "coily",
  "version": "0.10.0",
  "description": "Simulate values using spring physics",
  "author": "Tim Morris <timthewebguy@gmail.com>",
  "homepage": "https://github.com/tkofh/coily#readme",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "module": "./dist/api.mjs",
  "types": "./dist/api.d.mts",
  "exports": {
    ".": {
      "import": "./dist/api.mjs",
      "types": "./dist/api.d.mts"
    },
    "./loop": {
      "import": "./dist/loop.mjs",
      "types": "./dist/loop.d.mts"
    }
  },
  "files": ["dist"],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tkofh/coily.git"
  },
  "scripts": {
    "build": "unbuild",
    "test": "vitest run",
    "prepublish": "bun run build"
  },
  "bugs": {
    "url": "https://github.com/tkofh/coily/issues"
  },
  "devDependencies": {
    "@repo/tsconfig": "workspace:*",
    "unbuild": "^2.0.0",
    "vitest": "^2.1.4"
  },
  "dependencies": {
    "tickloop": "^0.5.0"
  }
}
